{
  "name": "System Information",
  "version": "1.0",
  "description": "Extension to fetch System Information ",
  "permissions": [
    "system.cpu",
    "system.memory",
    "system.storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "32": "/img/system-32.png",
      "48": "/img/system-48.png",
      "128": "/img/system-128.png"
    }
  },
  "icons": {
    "32": "/img/system-32.png",
    "48": "/img/system-48.png",
    "128": "/img/system-128.png"
  },
  "manifest_version": 3,
  "externally_connectable": {
    "matches": ["*://chrome-diagnostics-app.web.app/*", "http://localhost:5000/"]
  }
}
