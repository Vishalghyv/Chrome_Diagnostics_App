{
  "name": "System Information",
  "version": "1.0",
  "description": "Extension to fetch System Information ",
  "permissions": [
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "activeTab",
    "storage",
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["moment.js", "chart.js", "chartjs-streaming.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "/img/system-32.png",
      "48": "/img/system-48.png",
      "128": "/img/system-128.png"
    }
  },
  "icons": {
    "32": "/img/system-32.png",
    "48": "/img/system-48.png",
    "128": "/img/system-128.png"
  },
  "manifest_version": 2
}
